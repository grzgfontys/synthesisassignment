@page
@using LogicLayer.Models;
@model WebApp.Pages.ShopModel
@{
	ViewData["Title"] = "Shop";
	ViewData["Css"] = "~/css/shop.css";
}
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />

<div class="popUp">
	@Model.mess
</div>

@{
	foreach (Item item in Model.items)
	{
<form method="post" class="item">
@{
	if(item.Discounts.Any())
	{
		<div class="discount">
		@foreach (IDiscount discount in item.Discounts)
		{
			@discount.ToString()
		}
		</div>
	}
}
	<div class="image">img</div>
	<div class="details">
		<div class="name">
			@item.Name
			@if(Model.favListItems.Find(x => x.Id == item.Id) == null)
			{
				<a asp-page-handler="FavItem" asp-route-FavItemId="@item.Id" class="favIcon">
					<span class="material-symbols-outlined">favorite</span>
				</a>
			}
		</div>
		<div class="category">
			@item.Category @item.SubCategory
		</div>
		<div class="price">
			@item.Price
		</div>
		<div class="amount">
			<input type="number" asp-for="Amount" max="@item.StockAmount" min="1" value="0"/> 
			<label asp-for="Amount">/ @item.StockAmount</label>
		</div>
	</div>
			<button asp-page-handler="AddItem" asp-route-ItemId="@item.Id" type="submit" class="addToCart">
		Add to Cart
	</button>
</form>
	}
}